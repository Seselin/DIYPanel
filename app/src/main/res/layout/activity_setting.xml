<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <LinearLayout
        android:id="@+id/ll_set_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="抽奖格子数设定"
            android:textColor="@color/app_text_title" />

        <TextView
            android:id="@+id/tv_num_config"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/icon_next"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select_plan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="奖品组合选择"
            android:textColor="@color/app_text_title" />

        <TextView
            android:id="@+id/tv_plan_config"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/icon_next"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/blue" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_edit_plan"
        style="@style/clickItemStyle"
        android:layout_marginTop="1dp"
        android:text="奖品组合编辑" />

    <TextView
        android:id="@+id/tv_edit_contain"
        style="@style/clickItemStyle"
        android:layout_marginTop="1dp"
        android:text="奖品库编辑" />

    <View style="@style/divider_margin" />

    <TextView
        android:id="@+id/tv_clear_contain"
        style="@style/clickItemStyle"
        android:layout_marginTop="1dp"
        android:text="清空奖品库" />

    <TextView
        android:id="@+id/tv_set_default_contain"
        style="@style/clickItemStyle"
        android:layout_marginTop="1dp"
        android:text="初始化奖品库" />


</LinearLayout>